<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:fontFamily="@font/comfortaa"
        android:layout_margin="12dp"
        android:textColor="#5E60CE"
        android:text="I used to be"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:id="@+id/msg"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:id="@+id/editText"
            android:hint="Enter Answer"
            android:autoLink="web"
            android:linksClickable="true"
            android:maxLength="1000"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:textSize="18sp" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:text="E.g. I used to be active/ playful/ stressfree/angry \n(you can choose any word),"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/comfortaa"
        android:layout_margin="12dp"
        android:textColor="#5E60CE"
        android:text="But now I am"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:id="@+id/msg2"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:hint="Enter Answer"
            android:id="@+id/editText2"

            android:autoLink="web"
            android:linksClickable="true"
            android:maxLength="1000"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:textSize="18sp" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:text="E.g. But now I an sad/productive."
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/nxt"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/msg"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/bluebutton"
        />





</LinearLayout>